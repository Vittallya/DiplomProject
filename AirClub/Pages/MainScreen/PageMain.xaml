<Page x:Class="AirClub.Pages.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AirClub.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding MenuViewModel, Source={StaticResource ViewModelLocator}}"
      Title="Главная страница">



    <WrapPanel Orientation="Vertical">
        <Button Padding="10 5" Margin="5" Content="Сотрудники" Command="{Binding ShowEmployees}"/>
        <Button Padding="10 5" Margin="5"  Content="Специальности" Command="{Binding ShowSpecials}"/>
    </WrapPanel>
</Page>
